<div class='text-center'>
  <div class='row mt-4'>
    <div class='col-md-6'>
      <header>
        <h2>{{title}}</h2>
        <p>{{content}}</p>
        <p>Created by {{user.name}} on {{format_date date_created}}</p>
      </header>
    </div>
  </div>
  <form class='form new-comment-form' method='post' action='/api/comments'>
    <div class='form-group'>
      <label for='comment-title'>Comment title:</label>
      <input class='form-input' type='text' id='comment-title' name='title' />
    </div>
    <div class='form-group'>
      <label for='comment-cont'>Content:</label>
      <textarea class='form-input' id='comment-cont' name='content'></textarea>
    </div>
    <div class='form-group'>
      <input type='hidden' name='post_id' value='{{id}}' />
      <button type='submit' class='btn btn-primary'>Create</button>
    </div>
  </form>
  {{> comments}}
</div>