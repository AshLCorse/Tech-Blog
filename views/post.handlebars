<div class='text-center'>
  <div class='row mt-4'>
    <div class='col-md-6'>
      <header>
        <h2>{{title}}</h2>
        <p>{{content}}</p>
        <p>Created by {{user.name}} on {{format_date date_created}}</p>
      </header>
    </div>
  </div>
  <form class='form new-comment-form'>
    <div class='form-group'>
      <label for='comment-title'>Comment title:</label>
      <input
        class='form-input'
        type='text'
        id='comment-title'
        name='comment-title'
      />
    </div>
    <div class='form-group'>
      <label for='comment-cont'>Content:</label>
      <textarea
        class='form-input'
        id='comment-cont'
        name='comment-cont'
      ></textarea>
    </div>
    <div class='form-group'>
      <button type='submit' class='btn btn-primary'>Create</button>
    </div>
  </form>
  <div *ngIf='comments'>
    <h3>Comments:</h3>
    <div *ngFor='let comment of comments'>
      <h3>{{comment.title}}</h3>
      <p>{{comment.content}}</p>
      <p>Posted by
        {{comment.user.name}}
        on
        {{comment.date_created}}</p>
    </div>
  </div>
</div>